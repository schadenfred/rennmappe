= form_for(vehicle) do |f|
  - if vehicle.errors.any?
    #error_explanation
      %h2
        = pluralize(vehicle.errors.count, "error")
        prohibited this vehicle from being saved:
      %ul
        - vehicle.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :vin
    = f.text_field :vin
  .field
    = f.label :make
    = f.text_field :make
  .field
    = f.label :model
    = f.text_field :model
  .actions
    = f.submit
