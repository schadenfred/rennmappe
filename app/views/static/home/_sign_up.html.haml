%section#sign-up-form.section-padding.white-bg.text-center
  .container.mb-60
    .row.text-center
      = render "messages"
      %h2 Sign up
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
        = f.error_notification
        = f.input :email, autofocus: true
        = f.button :submit, "Sign up", class: "btn btn-default btn-block"
