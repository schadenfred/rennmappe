= form_for(org) do |f|
  - if org.errors.any?
    #error_explanation
      %h2
        = pluralize(org.errors.count, "error")
        prohibited this org from being saved:
      %ul
        - org.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit
