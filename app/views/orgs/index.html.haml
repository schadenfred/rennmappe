%p#notice= notice
%h1 Orgs
%table
  %thead
    %tr
      %th Name
      %th Type
      %th Slug
      %th{:colspan => "3"}
  %tbody
    - @orgs.each do |org|
      %tr
        %td= org.name
        %td= org.type
        %td= org.slug
        %td= link_to 'Show', org
        %td= link_to 'Edit', edit_org_path(org)
        %td= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Org', new_org_path
